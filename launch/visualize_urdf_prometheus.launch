<launch>

  <!-- USE: roslaunch prometheus_basic visualize_urdf_prometheus.launch model:='$(find prometheus_basic)/urdf/prometheus_basic.urdf' -->
  <arg name="model" default="$(find prometheus_basic)/urdf/prometheus_basic.urdf"/>


  <param name="robot_description" command="cat $(arg model)" />

  <!-- send fake joint values -->
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>

  <!-- Combine joint values -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find prometheus_basic)/rviz_config/urdf.rviz"/>
  <!--<node name="rviz" pkg="rviz" type="rviz" args=""/> -->

</launch>